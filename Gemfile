# Styling Scss
gem 'bootstrap-sass', '~> 3.3.6'
gem 'sass-rails', '>= 3.2'
gem 'bourbon' # Bourbon css3/sass mixins
gem 'coffee-rails'
gem 'uglifier'

# use jquery as js framework
gem 'jquery-rails'
gem 'jquery-ui-rails'

gem 'therubyracer'
gem 'libv8', '~> 3.11.8'

# use paperclip to handle attachments
gem 'paperclip'

# use devise as authentication framework
gem 'devise'

# helpers for social media buttons
gem 'shareable'

# use nested_forms to simplify forms for models with associations
gem 'nested_form'
gem 'bootstrap_form'
gem 'date_validator'

# ckeditor - html wysiwyg
gem 'ckeditor'

#event_calendar
gem 'calendrier'
gem 'icalendar'
gem 'html2markdown'


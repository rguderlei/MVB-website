source 'http://rubygems.org'

gem 'rails', '3.2.1'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# sqlite as dev database
gem 'sqlite3'
gem 'mysql2'
# Styling Scss
group :assets do
    gem 'sass-rails', "~> 3.2.3"
    gem 'coffee-rails', "~> 3.2.1"
    gem 'uglifier', ">=1.0.3"
end
# use jquery as js framework
gem 'jquery-rails'
gem 'therubyracer'
    
gem 'bourbon' # Bourbon css3/sass mixins
gem 'bootstrap-sass', '~> 1.4.4'

# use paperclip to handle attachments
gem 'paperclip'

# use devise as authentication framework
gem 'devise'

# use nested_forms to simplify forms for models with associations
gem 'nested_form', :git => 'git://github.com/ryanb/nested_form.git'
gem 'simple_form'

# ckeditor - html wysiwyg
gem "ckeditor", "3.7.0.rc2"

#event_calendar
gem 'event-calendar', :require => 'event_calendar'
gem 'icalendar'


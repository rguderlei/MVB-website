<% content_for :title, "Konzerte" %>
<section id="concerts">
<div class="page-header">
<h3><%= yield :title %></h3>
</div>
 <p>
  <%= link_to('Neues Konzert anlegen', new_concert_path) if user_signed_in? %>
 </p>
<table  class="table">
  <tr>
    <th>Beginn</th>
    <th>Ende</th>
    <th>Ort</th>
    <th>Orchester</th>
    <th>Titel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @concerts.each do |concert| %>
      <tr>
        <td><%= l concert.start_at, :format=>:short if !concert.start_at.nil? %></td>
        <td><%= l concert.end_at, :format=>:time if !concert.end_at.nil? %></td>
        <td><%= concert.location %></td>
        <td><%= concert.orchestra %></td>
        <td><%= concert.title %></td>
        <td><%= link_to 'Anzeigen', concert %></td>
        <td><%= link_to('Bearbeiten', edit_concert_path(concert)) if user_signed_in? %></td>
        <td><%= link_to('LÃ¶schen', concert, :confirm => 'Sicher?', :method => :delete) if user_signed_in? %></td>
      </tr>
  <% end %>
</table>


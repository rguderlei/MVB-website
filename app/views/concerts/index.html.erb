<% content_for :title, "Konzerte" %>
<section id="concerts">
<div class="page-header">
<h3><%= yield :title %></h3>
</div>
 <p>
  <%= link_to('Neues Konzert anlegen', new_concert_path) if user_signed_in? %>
 </p>

  <ul class="thumbnails">
     <% @concerts.each do |concert| %>
         <li class="span3">
           <div class="thumbnail">
             <%= link_to concert do %>
                 <%= image_tag(concert.image.url(:medium)) %>
             <% end %>
             <p>
               <small><%= concert.title %></small>
             </p>
           </div>
         </li>
     <% end %>
   </ul>

</section>
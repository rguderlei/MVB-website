<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Begin</th>
    <th>End</th>
    <th>Location</th>
    <th>Orchestra</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.begin %></td>
    <td><%= concert.end %></td>
    <td><%= concert.location %></td>
    <td><%= concert.orchestra %></td>
    <td><%= concert.title %></td>
    <td><%= concert.description %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to('Edit', edit_concert_path(concert)) if user_signed_in? %></td>
    <td><%= link_to('Destroy', concert, :confirm => 'Are you sure?', :method => :delete) if user_signed_in? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New Concert', new_concert_path) if user_signed_in? %>

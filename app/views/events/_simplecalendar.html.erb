<div id="simple_calendar">
  <ul>

    <%
       start_date.to_date.upto(end_date.to_date) { |day| %>
        <% if !events.empty? and day===events.first.begin.to_date %>
            <li id="event">
        <% else %>
            <li>
        <% end %>
        <%= l day, :format=>'%a' %>
        <br/>
        <%= day.day.to_s %>
        <% if !events.empty? and day===events.first.begin.to_date %>
            <div>
              <%= events.first.title %>
              <br/>
              <%= events.first.orchestra %>
              <br/>
              <%= link_to "Details", events.first %>
            </div>
        <% events = events.drop(1)
           end %>
        </li>
    <% } %>
  </ul>
</div>

 

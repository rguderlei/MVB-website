<h1>Listing galleries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Context date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.name %></td>
    <td><%= gallery.context_date %></td>
    <td><%= link_to 'Show', gallery %></td>
    <td><%= link_to('Edit', edit_gallery_path(gallery)) if user_signed_in?%></td>
    <td><%= link_to('Destroy', gallery, :confirm => 'Are you sure?', :method => :delete) if user_signed_in?%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to('New Gallery', new_gallery_path) if user_signed_in?%>

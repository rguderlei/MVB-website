<% content_for :title, "Bilder" %>
<section id="images">
  <article class="col-1">
  <div class="page-header">
    <h3>Bilder</h3>
  </div>
  <p>
    <%= link_to('Neue Bildergalerie anlegen', new_gallery_path) if user_signed_in? %>
  </p>


  <div class="row">
    <% @galleries.each do |gallery| %>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">

            <%= link_to gallery do %>
                <%= image_tag(gallery.photos.first.image.url(:medium), :class=>"thumbnail") unless gallery.photos.first.nil? %>
            <% end %>
            <p>
              <small><%= gallery.name %></small>
              <br>
              <small class="muted">(<%= l(gallery.context_date) %>)</small>
            </p>
        </div>
    <% end %>
  </div>
  </article>
</section>


<div class="hero-unit visible-desktop">
  <h2>
    Musikverein Biberach an der Riss e.V.
  </h2>
  Löbliche Musikgesellschaft von 1768
</div>

<section id="aktuelles">

<div class="row">
    <div class="span4">
      <h3>Aktuelles</h3>
      <h4><%= @latest_info.nil? ? "nix los" : @latest_info.title %></h4>
      <p><%=  @latest_info.nil? ? "" : @latest_info.content[0..250]  %>
      <%= link_to ' ...', @latest_info %>  </p>
      <p><%= link_to 'Weitere Meldungen ...',infos_url %>  </p>
    </div>
    <div class="span4">
        <h3>Sinfonieorchester</h3>
          <a href="probenplan/Sinfonieorchester">Probenplan</a><br/>
          <% if !@next_sinf_concert.nil? %>
            <h4><%= @next_sinf_concert.title %></h4>
            <small><%= l @next_sinf_concert.start_at, :format=>:short_with_day %>, <br /> <%= @next_sinf_concert.location %> </small>
            <ul class="thumbnails">
                <li>
                    <%= link_to image_tag(@next_sinf_concert.image.url(:medium), :class => 'thumbnail'), @next_sinf_concert %>
                </li>
            </ul>
          <% end %>
    </div>
    <div class="span4">
          <h3>Stadtkapelle</h3>
          <a href="probenplan/Stadtkapelle">Probenplan</a>
          <% if !@next_skp_concert.nil? %>
            <h4><%= @next_skp_concert.title %></h4>
            <small><%= l @next_skp_concert.start_at, :format=>:short_with_day %>, <br /> <%= @next_skp_concert.location %> </small>
            <ul class="thumbnails">
                <li>
                    <%= link_to image_tag(@next_skp_concert.image.url(:medium), :class => 'thumbnail'), @next_skp_concert %>
                </li>
            </ul>
          <% end %>
    </div>
</div>
</section>

<section id="termine">
    <div class="page-header">
        <h3>Nächste Konzerte des Musikvereins</h3>
    </div>
    <ul class="unstyled">
      <% @next_concerts.each do |event| %>
        <li>
            <%= l event.start_at, :format=>:short_with_day %>, <%= event.location %>:
            <%= link_to event.title, event %>
              (
              <%= event.orchestra %>
              )
        </li>

      <% end %>
    </ul>
</section>
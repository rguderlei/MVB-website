<%= render :partial=>"events/simplecalendar", :locals=>{:events=>@monthly_events, :start_date=>@start_date, :end_date=>@end_date} %>
<div class="row">
<div class="span-one-third">
  <h2>Aktuelles</h2>
  <h3><%= @latest_info.nil? ? "nix los" : @latest_info.title %></h3>
  <p><%=  @latest_info.nil? ? "" : @latest_info.content %></p>
  <%= link_to 'mehr ...', infos_url %>
</div>
<div class="span-one-third">
  <h2>Sinfonieorchester</h2>
  <a href="probenplan/Sinfonieorchester">Probenplan</a><br/>
  <% if !@next_sinf_concert.nil? %>
    <h3><%= @next_sinf_concert.title %></h3>
    <%= l @next_sinf_concert.begin, :format=>:short %>, <br /> <%= @next_sinf_concert.location %> <br />
    <ul class="media-grid">
        <li>
            <%= link_to image_tag(@next_sinf_concert.image.url(:medium), :class => 'thumbnail'), @next_sinf_concert %>
        </li>
    </ul>
    <%= link_to 'mehr ...', @next_sinf_concert %>
  <% end %>
</div>
<div class="span-one-third">
  <h2>Stadtkapelle</h2>
  <a href="probenplan/Stadtkapelle">Probenplan</a>
  <% if !@next_skp_concert.nil? %>
    <h3><%= @next_skp_concert.title %></h3>
    <%= l @next_skp_concert.begin, :format=>:short %>, <br /> <%= @next_skp_concert.location %> <br />
    <ul class="media-grid">
        <li>
            <%= link_to image_tag(@next_skp_concert.image.url(:medium), :class => 'thumbnail'), @next_skp_concert %>
        </li>
    </ul>
    <%= link_to 'mehr ...', @next_skp_concert %>
  <% end %>
</div>
</div>
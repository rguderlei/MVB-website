<p id="notice"><%= notice %></p>
<section id="infos">
  <div class="page-header">
     <h1>  <%= @info.title %> </h1>
  </div>
  <small> <%= l @info.created_at, :format=>:short %> </small>

  <p>
      <%= @info.content %>
  </p>

 <% if user_signed_in? then %>
  <%= link_to 'Bearbeiten', edit_info_path(@info) %> |
  <%= link_to('Löschen', @info, :confirm => 'Sicher?', :method => :delete) %> |
  <%= link_to 'Zurück zur Übersicht', infos_path %>
 <% end %>
</section>
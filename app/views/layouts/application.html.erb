  <div style="clear:both"/>

  <div id="content">
    <%= yield %>
  </div>
  <!-- #middle-->
  <div id="footer">
    <div id="left"> &copy; 2011 Musikverein Biberach e.V. <a href="/static/impressum">Impressum</a></div>

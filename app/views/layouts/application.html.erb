  <div id="menucontainer">
    <ul id="menu">
      <li>
        <a href="/"><img src="/images/logo_mvb.gif" height="11px"/></a>
      </li>
      <li>
        <a href="/static/about">&uuml;ber uns</a>
        <ul>
          <li><a href="/static/vorstand">Vorstand</a></li>
          <li><a href="/static/geschichte">Geschichte</a></li>
          <li><a href="/static/satzung">Satzung</a></li>
          <li><a href="/static/joi">JOI</a></li>
        </ul>
      </li>
      <li><a href="/static/stadtkapelle">Stadtkapelle</a>
        <ul>
          <li><a href="/static/stadtkapelle">Orchester</a></li>
          <li><a href="/probenplan/Stadtkapelle">Probenplan</a></li>

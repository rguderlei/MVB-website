<section id="probenplan">
  <div class="page-header">
    <h1>Probenplan <%= @plan.orchestra %></h1>
  </div>
<p><small>Stand: <%= l Date.today, :format=>:long %> </small></p>
<p>
   Probenplan als iCalendar: <%= link_to request.url + ".ics", :format=>:ics %>
</p>


<div class="probenplan_anmerkung">
  <%= link_to('Bearbeiten', edit_plan_path(@plan)) if user_signed_in? %>
  <p><%= @plan.header.html_safe %></p>
</div>

<table>
  <tr>
    <th>Beginn</th>
    <th>Ort</th>
    <th>Veranstaltung</th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
      <tr>
        <td><%= l event.begin, :format=>:short %></td>
        <td><%= event.location %></td>
        <td><%= event.title %></td>
        <td><%= link_to "Anzeigen", polymorphic_path(event) %></td>
      </tr>
  <% end %>
</table>
</section>